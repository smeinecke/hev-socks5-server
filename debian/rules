#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)

ifeq ($(origin CC),default)
CC := $(DEB_HOST_GNU_TYPE)-gcc
CROSS_PREFIX := $(DEB_HOST_GNU_TYPE)-
endif


%:
	dh $@ --with=systemd

override_dh_auto_build:
	$(MAKE) CC=$(CC) CROSS_PREFIX=$(CROSS_PREFIX) ENABLE_STATIC=1 -j`nproc`

override_dh_auto_install:
	dh_auto_install -- INSTDIR=debian/hev-socks5-server/usr CROSS_PREFIX=$(CROSS_PREFIX)
	@if [ -f debian/hev-socks5-server/usr/etc/hev-socks5-server.yml ]; then \
		install -d debian/hev-socks5-server/etc && \
		mv debian/hev-socks5-server/usr/etc/hev-socks5-server.yml debian/hev-socks5-server/etc/hev-socks5-server.yml && \
		rmdir --ignore-fail-on-non-empty debian/hev-socks5-server/usr/etc || true; \
	fi

# Enable and start the service
override_dh_systemd_enable:
	dh_systemd_enable -p$(shell dh_listpackages) hev-socks5-server.service

# Ensure the service is properly stopped/started on upgrades
override_dh_systemd_start:
	dh_systemd_start -p$(shell dh_listpackages) hev-socks5-server.service --no-restart-on-upgrade

# Don't fail if the service is not running when stopping
override_dh_systemd_stop:
	dh_systemd_stop --no-fail-on-missing --no-restart-on-upgrade
